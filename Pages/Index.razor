@page "/"
@inherits NavMenu
@inject IJSRuntime JSRuntime

<section
    class="2xl:h-[90svh] xl:h-[80svh] lg:h-[70svh] md:h-[50svh] sm:h-[40svh] h-[30svh] w-full text-black flex items-end py-[2%] sm:px-[2%] px-[3%] font-satoshi ">
    <div class="w-full grid grid-rows-1 md:grid-cols-[10%_90%] grid-cols-1">
        <div class="font-semibold leading-none hidden md:flex flex-col justify-end py-3 sm:text-[1cqw]">
            <p>EXPERIÊNCIA</p>
            <p>EM VENDAS</p>
            <p>E TECNOLOGIA</p>
        </div>
        <div class="font-black leading-none text-right justify-end md:text-[12cqw] text-[12.7cqw] tracking-tighter ">
            <p>TRANSFORME</p>
            <p>SEU FUTURO</p>
        </div>
    </div>
</section>

<section
    class="w-full 2xl:h-[100svh] xl:h-[90svh] lg:h-[80svh] md:h-[70svh] sm:h-[50svh] h-[40svh] text-[#2B4257] flex justify-center pb-[2%]">
    <div class="row w-full h-full bg-[url('../Images/background2.jpg')] bg-cover bg-no-repeat bg-center">
    </div>
</section>

<section
    class="sm:px-[2%] px-[3%] md:pt-24 pt-16 font-satoshi grid 2xl:grid-rows-[auto_40svh] md:grid-rows-[auto_40svh] grid-rows-[auto_30svh] justify-start items-center text-black about">
    <p class="tracking-tighter font-semibold leading-none lg:text-[4.3cqw] md:text-[5.3cqw] text-[6.3cqw] text-center">
        <span>
            Somos uma
            empresa independente de consultoria localizada em Campinas-SP focada em transformar Pequenas e Médias
            empresas
            (PMEs) dos setores de serviços e indústrias.
        </span>
    </p>
    <div class="h-full flex items-center justify-center">
        <a href="/sobre"
            class="flex flex-row justify-center items-center font-semibold rounded-full know-more bg-[#2B4257] text-white w-64"
            title="Saiba mais">
            @* <span class="lg:text-[1cqw] md:text-[1.5cqw] sm:text-[2cqw] text-[3.5cqw]">SAIBA MAIS</span> *@
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                stroke="currentColor" class="size-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>

        </a>
    </div>
</section>

<section class="w-full md:h-[25svh] h-[15svh] text-black">
    <div
        class="grid md:grid-cols-[20%_60%_20%] grid-cols-[40%_60%] items-start w-full 2xl:pb-10 sm:px-[2%] px-[3%] font-satoshi">
        <h1 class="2xl:text-[1cqw] md:text-[1.5cqw]  text-[3cqw] font-semibold leading-none  ">
            <p class="p-0 opacity-70">Nossos serviços</p>
        </h1>
        <h1 class="xl:text-[5cqw] text-[6cqw] leading-none tracking-tighter font-black">
            <p class="p-0">TRABALHANDO</p>
            <p class="p-0">SEMPRE</p>
            <p class="p-0">COM INTELIGÊNCIA</p>
        </h1>
        <div
            class="md:grid hidden grid-rows-[auto-auto] h-full xl:text-[1cqw] md:text-[1.5cqw] text-[2.5cqw] font-normal leading-none">
            <p class="p-0">Os serviços da <span class="font-zodiak font-bold text-[#2B4257]">4i.</span> funcionam a
                partir da ideia de 4
                inteligências, facilitando seu entendimento do processo e assim, o melhorando.</p>
            @* <a href="/servicos" class="grid place-items-end bg-red-500">Ver mais</a> *@
        </div>
    </div>
</section>

<section class="md:hidden w-full h-[15svh] text-black flex items-center">
    <div class="items-center w-full h-auto lg:py-4 sm:px-[2%] px-[3%] font-satoshi">
        <p class="2xl:text-[1cqw] text-[3.5cqw] font-normal leading-none tracking-tighter">
            Os serviços da <span class="font-zodiak font-bold text-[#2B4257]">4i.</span> funcionam a
            partir da ideia de 4
            inteligências, facilitando seu entendimento do processo e assim, o melhorando.
        </p>
    </div>
</section>

<section
    class="lg:h-svh sm:h-[50svh] h-[40svh] w-full 2xl:pt-[4.5%] xl:pt-[5%] lg:pt-[5.5%] sm:p-[2%] p-[3%] font-satoshi text-black lg:sticky lg:top-0">
    <div
        class="grid grid-rows-2 border-black/40 border-[1px] border-dashed hover:border-[#2B4257] hover:border-solid bg-white p-3 h-full ">
        <div class="grid grid-cols-2 items-start 2xl:text-[1cqw] md:text-[2cqw] text-[3cqw] font-semibold">
            <p class="font-zodiak">01. Antecipe, adapte e domine.</p>
            <div class="flex justify-end">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 p-0">
                    <path fill-rule="evenodd"
                        d="M5.166 2.621v.858c-1.035.148-2.059.33-3.071.543a.75.75 0 0 0-.584.859 6.753 6.753 0 0 0 6.138 5.6 6.73 6.73 0 0 0 2.743 1.346A6.707 6.707 0 0 1 9.279 15H8.54c-1.036 0-1.875.84-1.875 1.875V19.5h-.75a2.25 2.25 0 0 0-2.25 2.25c0 .414.336.75.75.75h15a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-2.25-2.25h-.75v-2.625c0-1.036-.84-1.875-1.875-1.875h-.739a6.706 6.706 0 0 1-1.112-3.173 6.73 6.73 0 0 0 2.743-1.347 6.753 6.753 0 0 0 6.139-5.6.75.75 0 0 0-.585-.858 47.077 47.077 0 0 0-3.07-.543V2.62a.75.75 0 0 0-.658-.744 49.22 49.22 0 0 0-6.093-.377c-2.063 0-4.096.128-6.093.377a.75.75 0 0 0-.657.744Zm0 2.629c0 1.196.312 2.32.857 3.294A5.266 5.266 0 0 1 3.16 5.337a45.6 45.6 0 0 1 2.006-.343v.256Zm13.5 0v-.256c.674.1 1.343.214 2.006.343a5.265 5.265 0 0 1-2.863 3.207 6.72 6.72 0 0 0 .857-3.294Z"
