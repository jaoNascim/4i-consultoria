@page "/NavMenu"

<header class="grid grid-rows-[40px_auto] font-satoshi top-0 py-[1%] sm:px-[2%] px-[3%] w-full fixed z-20">
    <div class="grid md:grid-cols-[69.5%_20%_10%] sm:grid-cols-[61%_24%_14%] grid-cols-[87%_12%] w-full justify-between">
        <div
            class="w-full h-10 flex items-center justify-between sm:text-[1.5cqw] text-[4cqw] font-bold leading-none sm:px-4 px-3 bg-[#ebf4f0] rounded-full">
            <a href="/">
                <span class="p-0 font-zodiak text-[#2B4257]">
                    4i Consultoria.
                </span>
            </a>
            <span class="lg:text-[1cqw] sm:text-[1.5cqw] text-[2.5cqw] font-medium p-0 text-[#2B4257]">TRANSFORME SEU
                FUTURO.</span>
            @* <img src="../Images/LogoG.png" alt="" class="w-auto h-6 blur-none"> *@
        </div>
        <nav class="w-full h-full sm:grid hidden place-items-center bg-[#ebf4f0] sm:px-4 px-3 rounded-full">
            <ul class="flex items-center justify-between h-full w-full">
                <li><a href="/sobre"
                        class="p-0 lg:text-[1cqw] sm:text-[1.5cqw] font-medium text-[#2B4257] flex items-center">SOBRE.</a>
                </li>
                <li><a href="/servicos"
                        class="p-0 lg:text-[1cqw] sm:text-[1.5cqw] font-medium text-[#2B4257] flex items-center">SERVIÇOS.</a>
                </li>
            </ul>
        </nav>
        <div class="w-full h-full sm:grid hidden place-items-center bg-[#2B4257] rounded-full">
            <a href="/contato" class="p-0 lg:text-[1cqw] sm:text-[1.5cqw] font-medium text-[#ebf4f0]">CONTATO.</a>
        </div>
